{
    "name": "matchapro-gc-desktop",
    "version": "3.5.0",
    "description": "Desktop application untuk mengakses matchapro.web.bps.go.id - Sensus Ekonomi 2026",
    "main": "main.js",
    "author": "Jstfire - 7415 - 1500",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win portable"
    },
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "^25.0.0"
    },
    "build": {
        "appId": "go.bps.matchapro.gc.desktop",
        "productName": "Matchapro GC Desktop",
        "win": {
            "target": "portable",
            "icon": "logo-app.png",
            "signAndEditExecutable": false
        },
        "portable": {
            "artifactName": "Matchapro-GC-Desktop-Portable-V3.5.0.exe"
        },
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "splash.html",
            "logo-se.png",
            "logo-app.png",
            "src/**/*"
        ]
    }
}